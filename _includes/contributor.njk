---
layout: base.njk
---
<article class="contributor">
  <h2>{{ title }}</h2>
  {% if image %}
  <img src="{{ image }}" alt="{{ title }}">
  {% endif %}
  <div class="contributor-bio">
    {{ content | safe }}
  </div>

  {% set namedPosts = collections.posts | postsNamedForContributor(title) %}
  {% if namedPosts.length %}
  <h3>Posts</h3>
  <ul>
    {% for post in namedPosts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span>{{ post.date | date("MMMM d, yyyy") }}</span>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
</article>
